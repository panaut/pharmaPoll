<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Survey name</th>
            <th>Title</th>            
            <th width="25"></th>
            <th width="25"></th>
            <th width="25"></th>
            <th width="25"></th>
        </tr>
