@foreach (var item in Model)
{
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.SurveyIdentifier</td>
            <td>@item.Title</td>
            @if (!item.IsActive)
            {
                <td><a href="one"> <i id=@string.Concat(item.Id, "-glyphicon-play") class="glyphicon glyphicon-play"></i></a></td>
            }
            else
            {
                <td><a href="one"> <i id=@string.Concat(item.Id, "-glyphicon-stop") class="glyphicon glyphicon-stop"></i></a></td>
            }
            <td><a href="two"> <i id=@string.Concat(item.Id, "-glyphicon-pencil")class="glyphicon glyphicon-pencil"></i></a></td>
            <td><a href="three"> <i id=@string.Concat(item.Id, "-glyphicon-trash") class="glyphicon glyphicon-trash"></i></a></td>
